#!/usr/bin/env php
<?php
$root = dirname(__DIR__, 4) . DIRECTORY_SEPARATOR;

if (!$loader = include $root. 'vendor/autoload.php') {
    die('You must set up the project dependencies.');
}

$config = [
    'root' => $root,
    'app' => "{$root}app/"
];

$config = (include("{$config['app']}config/config.php")) + $config;

$input = new \Prim\Console\Input($argv);

$console = new \Prim\Console\Console($config, $input);

$console->run();